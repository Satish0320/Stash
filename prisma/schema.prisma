generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String   @unique
  password      String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  folders       Folder[]
  links         Link[]
}


model Folder {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  isPublic    Boolean  @default(false) // Toggle this to share with others
  slug        String   @unique @default(cuid()) // For shareable URLs (e.g., stash.app/folder/slug)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relationships
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  links       Link[]

  @@index([userId])
}

model Link {
  id          String   @id @default(cuid())
  url         String   @db.Text
  title       String?
  type        LinkType @default(OTHER) // Defines if it's YouTube, Twitter, etc.
  metadata    Json?
  
  isFavorite  Boolean  @default(false)
  isArchived  Boolean  @default(false) // "Trash" functionality

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relationships
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  folderId    String?  // Optional: A link can exist without a folder (in "All Items")
  folder      Folder?  @relation(fields: [folderId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([folderId])
}

enum LinkType {
  YOUTUBE
  TWITTER
  LINKEDIN
  OTHER
}